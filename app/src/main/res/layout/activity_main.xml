<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/arvuti_valik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Arvuti valik : "
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/ArvutiValik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/karid"/>

        <TextView
            android:id="@+id/sinu_valik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sinu valik : "
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/SinuValik"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/kivi"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tulemus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:textSize="50sp" />
    </LinearLayout>


    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/kivi"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/kivi" />


        <ImageButton
            android:id="@+id/karid"
            android:layout_width="400dp"
            android:layout_height="116dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/karid" />


        <ImageButton
            android:id="@+id/paber"
            android:layout_width="384dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/paber" />
    </LinearLayout>



    <TextView
        android:id="@+id/Score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Tulemus"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vaata oma tulemused:" />

</LinearLayout>